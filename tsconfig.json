{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components*": ["./src/components*"],
      "@/hooks*": ["./src/hooks*"],
      "@/layouts*": ["./src/layouts*"],
      "@/app*": ["./src/app*"],
      "@/lib*": ["./src/lib*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/(pages)/(dashboard)/booking-management/bookings/[bookingId]"],
  "exclude": ["node_modules"]
}
